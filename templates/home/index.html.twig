{% extends 'base.html.twig' %}
{% block body %}
    <div id="intro" class="w3-display-container">
        <img src="{{ asset('images/wallp.jpg') }}" alt="Lights" class="w3-image">
        <div class="w3-center w3-display-middle">
            <p class="w3-normal w3-large shadow-black">Lorem ipsum dolor sit amet, consectetur
                adipiscing elit.</p>
        </div>
        <a id="arrowDown" class="w3-right" onclick="scrollToTrick()">
            <i class="fa fa-arrow-down w3-xxlarge" aria-hidden="true"></i>
        </a>
    </div>
    <div class="w3-row-padding" id="tricks">
        {{ include('home/trick.html.twig') }}
    </div>
    {% if tricks|length < nTricks %}
        <div class="w3-center w3-padding w3-margin" id="showMore" onclick="showMoreTrick({{ nTricks }})">
            <button class="w3-btn w3-blue w3-center w3-round">Afficher plus</button>
        </div>
    {% endif %}
    <a id="arrowUp" class="w3-right w3-hide" onclick="scrollToTrick()">
        <i class="fa fa-arrow-up w3-xxlarge" aria-hidden="true"></i>
    </a>
{% endblock %}
