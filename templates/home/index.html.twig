{% extends 'base.html.twig' %}

{% block title %}{% endblock %}

{% block body %}

    <div id="intro" class="w3-display-container">
        <img src="images/wallp.jpg" alt="Lights" class="w3-image">
        <div class="w3-center w3-display-middle">
            <p class="w3-normal w3-large" style="text-shadow:1px 1px 0 #444">Lorem ipsum dolor sit amet, consectetur
                adipiscing elit.</p>
        </div>
        <a id="arrow" class="w3-display-bottomright myblue w3-padding-64" style="margin-right:45px;"
           onclick="scrollToTrick()">
            <i class="fa fa-arrow-down w3-xxlarge" aria-hidden="true"></i>
        </a>
    </div>
    <div class="w3-row-padding w3-margin-top" id="tricks">
        {% for trick in tricks %}
            <div class="w3-third w3-margin-bottom" id="trick">
                <div class="w3-card">
                    <img class="w3-image" src="images/tricks/ZYdken1.jpg">
                    <div class="w3-container w3-padding">
                        <a href="{{ path('trick_show', {'slug': trick.slug}) }}">{{ trick.title }}</a>
                        <div class="w3-right">
                            <a href="{{ path('trick_edit', {'slug': trick.slug}) }}">
                                <i class="fa fa-pencil w3-margin-right" aria-hidden="true"></i>
                            </a>
                            <a onclick="document.getElementById('{{'modal' ~ trick.id }}').style.display='block'" style="cursor: pointer">
                                <i class="fa fa-trash" aria-hidden="true"></i>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
            <div id="{{'modal' ~ trick.id }}" class="w3-modal w3-animate-opacity">
                {{ include('trick/_delete_form.html.twig') }}
            </div>
        {% endfor %}
    </div>
    {% if tricks|length < nTricks %}
        <div class="w3-center w3-padding w3-margin" id="showMore" n="{{ nTricks }}">
            <button class="w3-btn w3-blue w3-center w3-round" onclick="showMoreTrick()">Afficher plus</button>
        </div>
    {% endif %}
    <a id="arrowup" class="w3-right w3-hide myblue" onclick="scrollToTrick()">
        <i class="fa fa-arrow-up w3-xxlarge" aria-hidden="true"></i>
    </a>
    {% block javascripts %}
        {{ parent() }}
    {% endblock %}
{% endblock %}
