<div class="w3-margin-top w3-padding-64">
    <div class="w3-container w3-center">
        <img width="50%" src="{{ image_directory ~ image.name }}" id="thumb" alt="{{ image.alt }}">
        {{ form_start(form) }}
        {{ form_widget(form._token) }}
        <div class="w3-margin">
            {% if form_errors(form.alt) %}
                <div class="w3-panel w3-pale-red">
                    {{ form_errors(form.alt) }}
                </div>
            {% endif %}
            {{ form_widget(form.alt) }}
        </div>
        <div class="w3-margin">
            {% if form_errors(form.bool) %}
                <div class="w3-panel w3-pale-red">
                    {{ form_errors(form.bool) }}
                </div>
            {% endif %}
            {{ form_label(form.bool) }}
            {{ form_widget(form.bool) }}
        </div>
        <div class="w3-margin">
            {% if form_errors(form.file) %}
                <div class="w3-panel w3-pale-red">
                    {{ form_errors(form.file) }}
                </div>
            {% endif %}
            {{ form_widget(form.file) }}
        </div>
        <button class="w3-button w3-blue" type="submit">Sauvegarder</button>
        <a class="w3-button w3-red" onclick="$('#modalDeleteImage{{ image.id }}').show()">Supprimer</a>
        {{ form_end(form, {'render_rest' : false}) }}
    </div>
    <div class="w3-modal" id="modalDeleteImage{{ image.id }}">
        {{ include('image/_delete_form.html.twig', {type:'form'}) }}
    </div>
</div>
