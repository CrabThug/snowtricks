{% if type == 'ajax' %}
    <div class="w3-modal-content w3-card" id="tokenDel{{ image.id }}" value="{{ csrf_token('delete' ~ image.id) }}">
        <header class="w3-container w3-blue w3-center">
            <h2>Confirmation</h2>
        </header>
        <div class="w3-container w3-center w3-margin w3-padding-32">
            <p class="w3-margin">Voulez vous supprimer l'image ?</p>
        </div>
        <footer class="w3-container w3-center w3-margin w3-padding-32">
            {% if main is defined and true %}
                <a class="w3-button w3-red" id="{{ image.id }}" link="{{ path("image_delete",{id:image.id}) }}"
                   onclick="deleteMedia(this);$('#modalDeleteImage{{ image.id }}').hide()">Supprimer</a>
            {% else %}
                <a class="w3-button w3-red" id="{{ image.id }}" media="{{ media }}"
                   link="{{ path("image_delete",{id:image.id}) }}"
                   onclick="deleteMedia(this);$('#modalDeleteImage{{ image.id }}').hide()">Supprimer
                </a>
            {% endif %}
            <a class="w3-button" onclick="$('#modalDeleteImage{{ image.id }}').hide()">Annuler</a>
        </footer>
    </div>
{% elseif type == 'form' %}
    <form class="w3-modal-content w3-card-4" action="{{ path('image_delete', {'id': image.id}) }}">
        <input type="hidden" name="_method" value="DELETE">
        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ image.id) }}">
        <header class="w3-container w3-blue w3-center">
            <h2>Confirmation</h2>
        </header>
        <div class="w3-container w3-center w3-margin w3-padding-32">
            <p class="w3-margin">Voulez vous supprimer l'image ?</p>
        </div>
        <footer class="w3-container w3-center w3-margin w3-padding-32">
            <button class="w3-button w3-red">Confirmer</button>
            <a class="w3-button" onclick="$('#modalDeleteImage{{ image.id }}').hide()">Annuler</a>
        </footer>
    </form>
{% endif %}
