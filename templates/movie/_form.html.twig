<div class="w3-margin-top w3-padding-64">
    <div class="w3-container w3-center">
        <iframe class="w3-opacity w3-hover-opacity-off w3-border-0" src="{{ movie.embed }}"
                allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture"
                allowfullscreen {% if edit is defined %}style="height: calc(100% - 38px);"{% endif %}>
        </iframe>
        {{ form_start(form) }}
        <div class="w3-margin">
            {% if form_errors(form.alt) %}
                <div class="w3-panel w3-pale-red">
                    {{ form_errors(form.alt) }}
                </div>
            {% endif %}
            {{ form_widget(form.alt) }}
        </div>
        <button class="w3-button w3-blue">{{ button_label|default('Sauvegarder') }}</button>
        <a class="w3-button w3-red" onclick="$('#modalDeleteMovie{{ movie.id }}').show()">Supprimer</a>
        {{ form_row(form._token) }}
        {{ form_end(form, {'render_rest' : false}) }}
    </div>
    <div class="w3-modal" id="modalDeleteMovie{{ movie.id }}">
        {{ include('movie/_delete_form.html.twig', {type:'form'}) }}
    </div>
</div>
