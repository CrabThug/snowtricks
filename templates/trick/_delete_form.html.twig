{% if type == 'form' %}
    <form class="w3-modal-content w3-card-4" method="post" action="{{ path('trick_delete', {'id': trick.id}) }}">
        <input type="hidden" name="_method" value="DELETE">
        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ trick.id) }}">
        <header class="w3-container w3-blue w3-center">
            <h2>Confirmation</h2>
        </header>
        <div class="w3-container w3-center w3-margin w3-padding-32">
            <p class="w3-margin">Voulez vous supprimer le trick ?</p>
        </div>
        <footer class="w3-container w3-center w3-margin w3-padding-32">
            <button class="w3-button w3-red">Confirmer</button>
            <a class="w3-button" onclick="$('#modalDelete{{ trick.id }}').hide()">Annuler</a>
        </footer>
    </form>
{% elseif type == 'ajax' %}
    <div class="w3-modal-content w3-card-4">
        <input type="hidden" id="tokenTrick{{ trick.id }}" name="_token" value="{{ csrf_token('delete' ~ trick.id) }}">
        <header class="w3-container w3-blue w3-center">
            <h2>Confirmation</h2>
        </header>
        <div class="w3-container w3-center w3-margin w3-padding-32">
            <p class="w3-margin">Voulez vous supprimer le trick ?</p>
        </div>
        <footer class="w3-container w3-center w3-margin w3-padding-32">
            <button class="w3-button w3-red" id="{{ trick.id }}" onclick="deleteTrick(this);$('#modalDelete{{ trick.id }}').hide()"
                    link="{{ path("trick_delete",{ id:trick.id }) }}">Confirmer
            </button>
            <a class="w3-button" onclick="$('#modalDelete{{ trick.id }}').hide()">Annuler</a>
        </footer>
    </div>
{% endif %}
